    "autoprefixer": "^10.4.20",
    "cssnano": "^7.0.6",
    "eslint": "^9.14.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-svelte": "^2.46.0",
    "html-to-text": "^9.0.5",
    "postcss": "^8.4.47",
